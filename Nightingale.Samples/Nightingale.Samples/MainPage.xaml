<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:charts="clr-namespace:Nightingale.Charts;assembly=Nightingale"
             x:Class="Nightingale.MainPage">

    <ScrollView>
        <!-- Place new controls here -->
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!" 
           HorizontalOptions="Start"
           VerticalOptions="Start" />
            <charts:BarChart x:Name="barChart" Values="{Binding Entries}" 
                             BackgroundColor="#202020"  HeightRequest="250" Margin="10,10,10,10"
                             TextSize="35"/>
            <charts:DoughnutChart x:Name="doughnutChart" Values="{Binding Entries}" 
                                  BackgroundColor="#202020" HeightRequest="210" Margin="10,10,10,10"
                                  TextSize="35"/>
            <charts:PieChart x:Name="pieChart" Values="{Binding Entries}" BackgroundColor="#202020" HeightRequest="210" Margin="10,10,10,10"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
